<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_placeholder_select" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adderss"
                        android:textColor="@color/ADSColor"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_malumot_select" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ma'lumotlar"
                        android:textColor="@color/ADSColor"
                        android:textSize="14dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_confirm_unselect" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To'lov"
                        android:textColor="@color/subtext"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:padding="5dp"
                                    android:text="Yetkazish manzili"
                                    android:textSize="12sp" />
                                <TextView
                                    android:id="@+id/txt_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5dp"
                                    android:layout_marginRight="@dimen/margin_5dp"
                                    android:background="#F4F3F3"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:hint="Manzil"
                                    android:padding="@dimen/margin_10dp" />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/secondary_text" />
                                <TextView
                                    android:id="@+id/lat"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5dp"
                                    android:layout_marginRight="@dimen/margin_5dp"
                                    android:background="#F4F3F3"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:hint="40.656454845"
                                    android:textIsSelectable="false"
                                    android:padding="@dimen/margin_10dp" />
                                <TextView
                                    android:id="@+id/lang"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5dp"
                                    android:layout_marginRight="@dimen/margin_5dp"
                                    android:background="#F4F3F3"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:hint="60.656454845"
                                    android:padding="@dimen/margin_10dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:padding="5dp"
                                    android:text="Qo'shimcha ma'lumot"
                                    android:textSize="12sp" />
                                <EditText
                                    android:id="@+id/txt_qosh_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5dp"
                                    android:layout_marginRight="@dimen/margin_5dp"
                                    android:background="#F4F3F3"
                                    android:textSize="13dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:hint="Qo'shimcha ma'lumot kiriting"
                                    android:padding="@dimen/margin_10dp" />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/secondary_text" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="@dimen/margin_10dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:padding="5dp"
                                    android:text="Ism"
                                    android:textSize="12sp" />
                                <EditText
                                    android:id="@+id/txt_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5dp"
                                    android:layout_marginRight="@dimen/margin_5dp"
                                    android:background="#F4F3F3"
                                    android:textSize="13dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:hint="Ismingiz"
                                    android:padding="@dimen/margin_10dp" />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/secondary_text" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="@dimen/margin_10dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:padding="5dp"
                                    android:text="Telefon raqam"
                                    android:textSize="12sp" />
                                <EditText
                                    android:id="@+id/txt_mobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5dp"
                                    android:layout_marginRight="@dimen/margin_5dp"
                                    android:background="#F4F3F3"
                                    android:textSize="13dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:hint="Telefon raqam"
                                    android:padding="@dimen/margin_10dp" />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/secondary_text" />
                            </LinearLayout>
                            <TextView
                                android:id="@+id/txt_pyment"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:fontFamily="@font/poppins"
                                android:textAllCaps="false"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="@dimen/margin_20dp"
                                android:background="@color/ADSColor"
                                android:elevation="5dp"
                                android:gravity="center"
                                android:text="Ma'lumotlarni saqlash"
                                android:textColor="@color/white"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </ScrollView>
                </FrameLayout>
    </LinearLayout>
    <include
        android:id="@+id/progress_bar"
        layout="@layout/progressbar"
        android:visibility="gone"
        />
</RelativeLayout>
